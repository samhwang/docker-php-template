{
    "name": "samhwang/docker-php-template",
    "description": "A PHP Docker project template",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Huynh",
            "email": "samhwang2112.dev@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "vlucas/phpdotenv": "3.*"
    },
    "require-dev": {
        "phpmd/phpmd": "2.*",
        "phpunit/phpunit": "8.*",
        "sebastian/phpcpd": "4.*",
        "squizlabs/php_codesniffer": "3.*"
    },
    "suggest": {
        "phing/phing": "2.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/App"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/App"
        }
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    }
}
